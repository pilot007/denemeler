@model WebApplication.Models.Student

<div class="row">

    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Horizontal Form</h3>
            </div>
            @using (Html.BeginForm("save", "Forms", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
        <div class="box-body">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Ögrenci adi</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", type = "text", placeholder = "Id" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Ögrenci adi</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control", type = "text", placeholder = "studentName" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Ögrenci Soyadi</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.StudentSurName, new { @class = "form-control", type = "text", placeholder = "studentSurname" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Dogum Tarihi</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.StudentBirthDate, new { @class = "form-control", type = "text", placeholder = "studentBirthdate" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Dogum Yeri</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.StudentBirthPlace, new { @class = "form-control", type = "text", placeholder = "studentBirthplace" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "text", placeholder = "studentEmail" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Handy</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", type = "text", placeholder = "studentPhone" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Ev Adresi</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Adres, new { @class = "form-control", type = "text", placeholder = "studentAdres" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Egitim Ücreti</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.StudentPrice, new { @class = "form-control", type = "text", placeholder = "studentPrice" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Ek Bilgi ve Notlar</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.StudentExtraInfo, new { @class = "form-control", type = "text", placeholder = "studentNotes" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Ögrenci Belgesi verildi mi ?
                        </label>
                    </div>
                </div>
            </div>
        </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-default">Vazgec</button>
                    <button type="submit" class="btn btn-info pull-right">Kaydet</button>
                </div>
            }
        </div>
    </div>
</div>
