@model WebApplication.Models.Student

<div class="row">

    <div class="col-md-12">
        <div class="box box-info">
            @using (Html.BeginForm("save", "Forms", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Ögrenci ID</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Id, new { @readonly = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mr_mrs" class="col-sm-2 control-label">Title</label>
                        <div class="col-sm-10"
                             >
                            @Html.RadioButtonFor(model => model.mr_mrs, "Herr") @Html.Label("Bay")
                            @Html.RadioButtonFor(model => model.mr_mrs, "Frau") @Html.Label("Bayan")
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Ögrenci Adi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control", type = "text", placeholder = "İsim" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Ögrenci Soyadi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StudentSurName, new { @class = "form-control", type = "text", placeholder = "Soyadı" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Dogum Tarihi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StudentBirthDate, new { @class = "form-control", type = "text", placeholder = "Doğum Tarihi" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Dogum Yeri</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StudentBirthPlace, new { @class = "form-control", type = "text", placeholder = "Doğum Yeri" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "text", placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Mobile No</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", type = "text", placeholder = "Phone" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Ev Adresi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Adres, new { @class = "form-control", type = "text", placeholder = "İletişim Adresi" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Posta Kodu</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.AdresPLZ, new { @class = "form-control", type = "text", placeholder = "Posta Kodu" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Şehir</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.AdresCity, new { @class = "form-control", type = "text", placeholder = "Şehir" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Egitim Ücreti</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StudentPrice, new { @class = "form-control", type = "text", placeholder = "Eğitim Ücreti" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Ek Bilgi ve Notlar</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StudentExtraInfo, new { @class = "form-control", type = "text", placeholder = "Extra Notlar" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.StudentPapier)
                                    <label for="StudentPapier">Öğrenci Belgesi verildi mi ?</label>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.Active, new { @checked = "checked" })
                                    <label for="Active">Öğrenci aktif mi ?</label>
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-default">Vazgec</button>
                    <button type="submit" class="btn btn-info pull-right">Kaydet</button>
                </div>
            }
        </div>
    </div>
</div>